<!-- index UI -->
<!-- page receives from "get" "/scrape" route an array, articles, of article refs as:
    [
        {
        headline:<headline string>,
        link: <link>,
        summary: <summary
        },
    ]
    -->
<div class="container">
    <div class="articles row">
        <div class="col-lg-10 col-lg-offset-1 col-sm-10 col-sm-offset-1 col-xs-12">
            <!-- do  articles exist? -->
            {{#if articles}}
            <!-- they do -->
                {{>show-articles}}
            {{else}}
            <!-- they do not -->
                <p>No articles yet! Try <a href="/scrape">scraping for them</a></p>
            {{/if}}
        </div>
    </div><!--/end articles row-->
</div><!-- /end main container-->